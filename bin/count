#!/usr/bin/env bash

set -euo pipefail

USER="$(whoami)"

FLAGS="${@}"

MAPLE_JAR="tests/count/build/libs/pennaJar-0.1.jar"
LOGBACK_JAR="tests/count/build/libs/logbackJar-0.1.jar"
mkdir -p out
sudo mount -t ramfs -o size=1G ramfs ./out
sudo chown -R "${USER}:${USER}" ./out

# TODO Write to csv, plot the results

localdir=$(dirname "$0")

function batch() {
  COUNT="${1:-10}"
  THREADS="${2:-1}"
  echo "${COUNT} / ${THREADS}"
  echo "Running penna"
  gradle -q :count:buildMapleJar
  perf stat java ${FLAGS} -jar "${MAPLE_JAR}" ${COUNT} ${THREADS} > out/penna.json

  echo ""

  for i in $(seq 0 $((THREADS - 1))); do
    test $(jq -creM ". | select(.data.thread==$i)" out/penna.json | wc -l) -eq ${COUNT} || {
      echo "failed for ${THREADS} threads and ${COUNT} lines"
     exit 1
    }
  done
  rm out/*.json
}

cd "${localdir}/.." && {
  batch 100000 1
  batch 100000 2
  batch 100000 5
  batch 250000 5
  batch 250000 10
  batch 250000 50
}

sudo umount out/
