#!/usr/bin/env bash

MAPLE_JAR="tests/throughput/build/libs/pennaJar-0.1.jar"

TIME="${1:-180000}"
THREADS="${2:-1}"

localdir=$(dirname "$0")
cd "${localdir}/.." && {
  gradle -q :throughput:buildMapleJar
  java -XX:+UnlockDiagnosticVMOptions -XX:+DumpPerfMapAtExit -jar "${MAPLE_JAR}" "${TIME}" "${THREADS}" > /dev/null
}